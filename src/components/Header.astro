---

import logo from "../img/logo.png"

const pathname = Astro.url.pathname
---

<header class="header">
    <div class="contenedor barra">
        <a href="">
            <img src={logo} alt="logo image" />
        </a>
        <nav class="navegacion">
            <a href="/"  class={pathname === "/" ? "active" : ""}>
                Home
            </a>
            <a href="/shop" class={pathname === "/shop" ? "active" : ""}>
                Shop
            </a>
            <a href="/about" class={pathname === "/about" ? "active" : ""}>
                About
            </a>
            <a href="/blog" class={pathname === "/blog" ? "active" : ""}>
                Blog
            </a>
        </nav>
    </div>
</header>

<style>
.header {
    background-image: linear-gradient(to right, rgb(0 0 0 / .8), rgb(0 0 0 / .7)), url(../img/header.jpg);
    padding: 5rem 0;
    background-position: center;
    background-size: cover;
}
.header img {
    width: 15rem;
}

.barra {
    display: flex;
    flex-direction: column;
    align-items: center;
}
@media (min-width: 768px) {
    .barra {
        flex-direction: row;
        justify-content: space-between;
    }
}

.navegacion {
    margin-top: 5rem;
    display: flex;
    align-items: center;
    gap: 2rem;
}
@media (min-width: 768px) {
    .navegacion {
        margin: 0;
    }
}
.navegacion a {
    color: var(--white);
    text-decoration: none;
    font-size: 1.4rem;
    font-weight: 700;
    text-transform: uppercase;
    padding: .5rem;
    transition-property: background-color;
    transition-duration: 300ms;
}
.navegacion a:hover,
.active {
    background: linear-gradient(to left, var(--secondary), var(--primary));
}
</style>